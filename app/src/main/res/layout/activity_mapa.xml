<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mapa de Guarulhos"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#222222"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Primeiro mapa -->
    <ImageView
        android:id="@+id/mapaGuarulhos1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:contentDescription="Mapa 1 de Guarulhos"
        android:scaleType="fitCenter"
        android:src="@drawable/mapagru" />

    <!-- EspaÃ§amento entre os mapas -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="16dp" />

    <!-- Segundo mapa -->
    <ImageView
        android:id="@+id/mapaGuarulhos2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:contentDescription="Mapa 2 de Guarulhos"
        android:scaleType="fitCenter"
        android:src="@drawable/mapagru2" />

</LinearLayout>
